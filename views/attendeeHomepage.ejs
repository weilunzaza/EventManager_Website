<!DOCTYPE html>
<html>
<head>
  <title>Attendee - Events</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h1 class="mb-4">Available Events</h1>

    <% if (events.length === 0) { %>
      <p>No events available right now.</p>
    <% } else { %>
      <div class="list-group">
        <% events.forEach(event => { %>
          <div class="list-group-item mb-3">
            <h4><%= event.title %></h4>
            <p><%= event.description %></p>
            <p>
              <strong>Date:</strong> <%= event.date %><br>
              <strong>Organiser:</strong> <%= event.organiser_name || event.organiser_username %><br>
              <strong>Company:</strong> <%= event.organiser_company || 'N/A' %><br>
              <strong>Normal Tickets:</strong> <%= event.normalQty %> available at $<%= event.normalPrice.toFixed(2) %><br>
              <strong>Concession Tickets:</strong> <%= event.concessionQty %> available at $<%= event.concessionPrice.toFixed(2) %>
              <a href="/attendee/book/<%= event.id %>" class="btn btn-primary mt-2" >Book Now</a>
            </p>
          </div>
        <% }); %>
      </div>
    <% } %>

    <a href="/" class="btn btn-secondary mt-4">Back to Home</a>
  </div>

</body>
</html>
